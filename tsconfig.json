{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "strict": true,
    "target": "es2020",
    "baseUrl": ".",
    "outDir": "lib",
    "rootDir": "src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["./types/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["**/node_modules/**"]
}
